<Window x:Class="TuringMachine.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuringMachine"
        mc:Ignorable="d"
        Title="PromptDialog" Height="150" Width="250">
    <StackPanel>
        <TextBlock Text="Enter value" Margin="10,10,10,5"/>
        <TextBox x:Name="ResponseTextBox" Margin="10,10,10,5" />
        <Button Content="OK" Click="OKButton_Click" Margin="10,10,10,5"/>
    </StackPanel>
</Window>
